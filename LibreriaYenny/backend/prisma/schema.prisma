generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model Book {
  id          Int      @id @default(autoincrement())
  description String
  image       String
  categoria   Category
  createdAt   DateTime @default(now())
  authorId    Int
  title       String
  author      Author   @relation(fields: [authorId], references: [id])
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  nombre    String
  apellido  String
  email     String
  mensaje   String
  enviadoEn DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model User {
  id           Int              @id @default(autoincrement())
  nombre       String
  apellido     String
  sexo         String
  temaFavorito String
  createdAt    DateTime         @default(now())
  email        String           @unique
  password     String
  role         Role             @default(USER)
  messages     ContactMessage[]
}

enum Category {
  Novela
  Terror
  CienciaFiccion
  Policial
}

enum Role {
  USER
  ADMIN
}
