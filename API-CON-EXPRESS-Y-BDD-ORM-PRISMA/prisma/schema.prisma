generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id              Int     @id @default(autoincrement())
  title_and_author String
  description     String
  image           String
  createdAt       DateTime @default(now())
}

model ContactMessage {
  id         Int      @id @default(autoincrement())
  nombre     String
  apellido   String
  email      String
  mensaje    String
  enviadoEn  DateTime @default(now())
}

