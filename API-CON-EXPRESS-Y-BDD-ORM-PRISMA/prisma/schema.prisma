generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  Novela
  Terror
  CienciaFiccion
  Policial
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model Book {
  id             Int      @id @default(autoincrement())
  title          String
  description    String
  image          String
  categoria      Category
  authorId       Int
  author         Author @relation(fields: [authorId], references: [id])
  createdAt      DateTime @default(now())
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  nombre    String
  apellido  String
  email     String
  mensaje   String
  enviadoEn DateTime @default(now())
}

